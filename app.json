{
  "expo": {
    "name": "TraceTrip",
    "slug": "trace-trip",
    "version": "1.0.8",
    "orientation": "portrait",
    "icon": "./assets/icone_t.png",
    "splash": {
      "image": "./assets/icone_t.png",
      "resizeMode": "contain",
      "backgroundColor": "#1E40AF"
    },
    "scheme": "tracetrip",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "androidStatusBar": {
      "backgroundColor": "#1E40AF",
      "barStyle": "light-content",
      "translucent": false
    },
    "android": {
      "package": "com.tracetrip.app",
      "versionCode": 8,
      "adaptiveIcon": {
        "foregroundImage": "./assets/icone_t.png",
        "backgroundColor": "#1E40AF"
      },
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.INTERNET",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_BACKGROUND_LOCATION",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.WAKE_LOCK",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.POST_NOTIFICATIONS"
      ],
      "foregroundServiceType": [
        "location"
      ],
      "foregroundService": {
        "notificationTitle": "TraceTrip Rastreamento",
        "notificationBody": "Rastreando sua rota em segundo plano",
        "notificationColor": "#1E40AF"
      },
      "intentFilters": [
        {
          "action": "android.intent.action.MAIN",
          "category": [
            "android.intent.category.LAUNCHER"
          ]
        }
      ]
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.tracetrip.app",
      "icon": "./assets/icone_t.png",
      "infoPlist": {
        "UIBackgroundModes": [
          "remote-notification",
          "location"
        ],
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Este aplicativo precisa acessar sua localização para rastreamento de viagem.",
        "NSLocationAlwaysUsageDescription": "Este aplicativo precisa acessar sua localização em background para rastreamento contínuo.",
        "NSLocationWhenInUseUsageDescription": "Este aplicativo precisa acessar sua localização para rastreamento de viagem."
      },
      "entitlements": {
        "aps-environment": "production"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/icone_t.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-web-browser",
      "expo-audio",
      "expo-secure-store",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "O TraceTrip precisa da sua localização mesmo com o app fechado para rastrear sua rota de viagem.",
          "locationAlwaysPermission": "O TraceTrip precisa da sua localização em background para rastreamento contínuo da sua rota de viagem.",
          "locationWhenInUsePermission": "O TraceTrip precisa da sua localização para rastreamento de viagem.",
          "isIosBackgroundLocationEnabled": true,
          "isAndroidBackgroundLocationEnabled": true,
          "isAndroidForegroundServiceEnabled": true
        }
      ],
      "expo-sqlite",
      [
        "onesignal-expo-plugin",
        {
          "mode": "production"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "0a48f39d-b656-4ba1-bf5c-aacfddaff5f7"
      },
      "oneSignalAppId": "13e1b3b0-0f04-4cab-a143-0542306e1b2f"
    }
  }
}